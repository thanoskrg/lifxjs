{
  "name": "lifxjs",
  "version": "1.1.0",
  "description": "A light-weight JavaScript library for using LIFX HTTP API",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "https://github.com/thanoskrg/lifxjs.git",
  "author": "Thanos Karagiannis <hey@maestros.io>",
  "keywords": [
    "lifx",
    "lifxjs",
    "lifxapi",
    "javascript",
    "node",
    "http",
    "api"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "test": "jest --verbose",
    "test:watch": "jest --watch --verbose",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.+(js|ts|tsx)": [
      "eslint --rule '@typescript-eslint/no-unused-vars: error'"
    ]
  }
}
